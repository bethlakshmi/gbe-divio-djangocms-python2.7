{% extends "base.tmpl" %}
{% load static sekizai_tags %}
{% block title %}
  Manage Expo Schedule
{% endblock %}
{% block head %}
    <link rel="stylesheet" type="text/css" href="/static/styles/fonts/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
{% endblock %}

{% block content %}
<form class="form-inline" action="" method="get" enctype="multipart/form-data">
 {% for form in other_forms %}
  {{ form }}
 {% endfor %}
<div class="container review">
 <ul class="nav nav-tabs" id="inner">
 {% for slug in conference_slugs %}
  <li role="presentation" {% if conference.conference_slug == slug %}class="active"{% endif %}><a href="{% url "scheduling:manage_event_list" slug %}?{{ request.GET.urlencode }}" class="gbe-tab" >{{slug}}</a></li>
 {% endfor %}
 </ul>
 <div class="scheduling-area">
   {% include "gbe/scheduling/manage_event_field.tmpl" with field=selection_form.day %}
   {% include "gbe/scheduling/manage_event_field.tmpl" with field=selection_form.calendar_type %}
   <div class="form-row">
   <div class="form-group col-md-2 col-12">
    <label class="form-check-label horizontal-label" id="{{ selection_form.staff_area.name }}">
     {% if selection_form.staff_area.errors %}
      <font color="red">!&nbsp;&nbsp;
     {% endif %}
     {{ selection_form.staff_area.label }}:&nbsp;&nbsp;
     {% if selection_form.staff_area.errors %}
      </font>
     {% endif %}</label>
   </div>
   <div class="form-group col-md-10 col-12">
     {% for checkbox in selection_form.staff_area %}
      <div class="form-group col-md-4 col-sm-4 col-12 checkbox-box{%if alt_id|slugify == checkbox.data.value|slugify %}-success{%endif%}">
      <div class="form-check-inline">
      <label class="form-check-label staff-checkbox-label" id="{{ checkbox.id_for_label }}">
      {{ checkbox.tag }}
      {{ checkbox.choice_label }}&nbsp;
      {% if conference.status != "completed" %}
      &nbsp;<a href="{% url "scheduling:edit_staff" checkbox.data.value %}" data-toggle="tooltip" title="Edit" class="detail_link">
       <i class="fa fa-pencil-square" aria-hidden="true"></i>
      </a>
     {% endif %}
      &nbsp;<a href="{% url "scheduling:copy_staff_schedule" checkbox.data.value %}" data-toggle="tooltip" title="Copy" class="detail_link">
       <i class="fa fa-files-o" aria-hidden="true"></i>
      </a>
      </label></div>
     </div>
     {% endfor %}
      {% if selection_form.staff_area.errors %}
        <font color="red">{{ selection_form.staff_area.errors }}</font>
      {% endif %}
   </div></div>
   <div class="form-row">
   <div class="form-group col-12" id="filter-button"><br>
      <input type="submit" class="btn btn-primary" name="filter" value="Filter">
   {% if conference.status != "completed" %}
      <a href="{% url 'scheduling:create_event_wizard' conference.conference_slug %}" role="button" class="btn btn-primary">Create</a>
   {% endif %}</div></div>
   Yellow = volunteers must be approved.
   <div class="row"><div class="col-12">&nbsp;</div></div>
{% if occurrences %}
 <div class="row">
  <div class="col-12">
    Toggle column(s):
      <a class="toggle-vis" id="gbe-table-select" data-column="0">Title</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="1">Parent</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="2">Area</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="3">Location</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="4">Date/Time</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="5">Duration</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="6">Type</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="7">Current Volunteer</a> - 
      <a class="toggle-vis" id="gbe-table-select" data-column="8">Max Volunteer</a>
  <table id="event_review" class="order-column table table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr class="bid-table">
        <th class="bid-table">Title</th>
        <th class="bid-table">Parent</th>
        <th class="bid-table">Area</th>
        <th class="bid-table">Location</th>
        <th class="bid-table">Date/Time</th>
        <th class="bid-table">Duration</th>
        <th class="bid-table">Type</th>
        <th class="bid-table">Current #</th>
        <th class="bid-table">Max #</th>
        <th class="bid-table">Action</th>
      </tr>
    </thead>
    <tfoot>
      <tr class="bid-table">
        <th class="bid-table">Title</th>
        <th class="bid-table">Parent</th>
        <th class="bid-table">Area</th>
        <th class="bid-table">Location</th>
        <th class="bid-table">Date/Time</th>
        <th class="bid-table">Duration</th>
        <th class="bid-table">Type</th>
        <th class="bid-table">Current #</th>
        <th class="bid-table">Max #</th>
        <th class="bid-table">Action</th>
      </tr>
    </tfoot>
    <tbody>
    {% for occurrence in occurrences %}
      <tr class="bid-table {% if occurrence.id in success_occurrences %}success{% endif %}">
       <td class="bid-table">{{ occurrence.title}}</td>
       <td class="bid-table"><a href="{{occurrence.parent_link}}" data-toggle="tooltip" title="Edit">{{ occurrence.parent_title}}</a></td>
       <td class="bid-table">{% for area in occurrence.staff_areas %}
        {% if conference.status != "completed" %}<a href="{% url "scheduling:edit_staff" area.pk %}" data-toggle="tooltip" title="Edit">{% endif %}{{area.slug}}{% if conference.status != "completed" %}</a>{% endif %}{% endfor %}</td>
       <td class="bid-table">{{ occurrence.location}}</td>
       <td class="bid-table">{{ occurrence.start}}</td>
       <td class="bid-table">{{ occurrence.duration }}</td>
       <td class="bid-table">{{ occurrence.type }}</td>
       <td class="bid-table{% if occurrence.approval_needed%} approval_needed{%endif%}">{{ occurrence.current_volunteer }}</td>
       <td class="bid-table{% if occurrence.approval_needed%} approval_needed{%endif%}">{{ occurrence.max_volunteer }}</td>
       <td class="bid-table"><div class="btn-group" role="group" aria-label="...">
        <a href="{{ occurrence.detail_link }}" data-toggle="tooltip" title="View" class="btn btn-default btn-sm" id="action-button">
         <i class="fa fa-eye" aria-hidden="true"></i></a>
        {% if occurrence.edit_link %}
        <a href="{{ occurrence.edit_link }}" data-toggle="tooltip" title="Edit" class="btn btn-default btn-sm" id="action-button">
         <i class="fa fa-pencil" aria-hidden="true"></i></a>{% endif %}
        {% if occurrence.copy_link %}
        <a href="{{ occurrence.copy_link }}" data-toggle="tooltip" title="Copy" class="btn btn-default btn-sm" id="action-button">
         <i class="fa fa-files-o" aria-hidden="true"></i></a>{% endif %}
        <a href="{{ occurrence.delete_link }}?next={{ request.get_full_path }}" data-toggle="tooltip" title="Delete" class="btn btn-default btn-sm" id="action-button">
         <i class="fa fa-trash-o" aria-hidden="true"></i></a>
       </div></td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
   </div></div>
{% endif %}
 </div>
</div>
</form>
{% addtoblock "js" %}
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
  $(document).ready(function() {
    var table = $('#event_review').DataTable({
         "paging": false,
         "columnDefs": [{ "orderable": false, "targets": 7 }],
         "order": [[ 7, "desc" ]]
    });

    $('a.toggle-vis').on( 'click', function (e) {
        e.preventDefault();

        // Get the column API object
        var column = table.column( $(this).attr('data-column') );

        // Toggle the visibility
        column.visible( ! column.visible() );
    } );
} );
</script>
{% endaddtoblock %}
{% endblock %}


