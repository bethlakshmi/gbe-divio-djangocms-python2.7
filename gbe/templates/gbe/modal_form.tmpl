{% extends 'base.tmpl' %}
{% load static sekizai_tags %}
{% block title %}
   {{page_title}}
{% endblock %}
{% block head %}
    <script type="text/javascript" src="/static/tinymce/tinymce.min.js"></script>
    <script>{% include "tiny-mce-user-settings.tmpl" %}</script>
{% endblock %}
{% block content %}
<h2 class="subtitle">{{view_title}}</h2>
<p>{{view_header_text | safe}}</p>

  {% if errors %}
    {% for error in errors %}
    <p style= "color:red">{{error}}</p>
    {% endfor %}
  {% endif %}

   {% if popup_text %}
   <div class="alert alert-info">{{popup_text |safe }}</div>
   {% endif %}
   <form action="" method="post" enctype="multipart/form-data">
  {{ instructions | safe }}
  <p><font color=red>*</font> indicates a required field</p>
    {% include "form_table.tmpl" %}
  <input type="submit" name="submit" value="Save">
  </form>
{% addtoblock "js" %}
{% for form in forms %}
 {{ form.media }}
{% endfor %}
<script>
(function($) {
    $('#add-form').click(function() {
        var index = $('#id_inline_test_models-TOTAL_FORMS').val()
        var newTable = $('#id_inline_test_models-__prefix__-DELETE').parents('table').clone()
        newTable.find(':input').each(function() {
            for (attr of ['name', 'id'])
                $(this).attr(
                    attr,
                    $(this).attr(attr).replace('__prefix__', index)
                )
        })
        newTable.insertBefore($(this))
        $('#id_inline_test_models-TOTAL_FORMS').val(
            parseInt($('#id_inline_test_models-TOTAL_FORMS').val()) + 1
        )
        newTable.slideDown()
    })
})($)
</script>
{% endaddtoblock %}
{% endblock %}