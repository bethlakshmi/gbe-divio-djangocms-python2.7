{% extends "base.tmpl" %}
{% block title %}
  Great Burlesque Exposition: Fashion Fair
{% endblock %}

{% block head %}
      {% include "gray_grids_css.tmpl" %}
{% endblock head %}

{% block content %}

   <H1 class="subtitle">Shop 'til You Drop!</H1>
   <div class="body font_regular">
      {{ user_message.description|safe}}
   </div>
{% if featured_vendors %}
    <section id="team" class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 perf-div">
            <h2 class="section-title perf-head fadeInUp" data-wow-delay="0s">Featured Vendors</h2>
          </div></div>
    {% include "gbe/vendor_box.tmpl" with vendors=featured_vendors featured=1%}
      </div>
{% endif %}
</section>
    <section id="team" class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 perf-div">
            <h2 class="section-title perf-head fadeInUp" data-wow-delay="0s">Vendors</h2>
          </div></div>
{% include "gbe/vendor_box.tmpl" with featured=0%}
      </div>
    </section>
