{% extends 'base.html' %}
{% load static sekizai_tags %}
{% block title %}
   {{page_title}}
{% endblock %}
{% block head %}
    {{ form.media.css }}
    <script type="text/javascript" src="/static/tinymce/tinymce.min.js"></script>
    <script>{% include "tiny-mce-user-settings.tmpl" %}</script>
{% endblock %}
{% block content %}
{% if not no_tabs %}
 <ul class="nav nav-tabs" id="inner">
  <li role="presentation"><a href="{% url 'gbe:persona-add' include_troupe %}{% if view.is_popup %}?_popup=1{% endif %}" class="{% if mode == 'performer' %}gbe-tab-active{% else %}gbe-tab{% endif %}">Create Bio</a></li>
  {% if include_troupe > 0 %}
  <li role="presentation"><a href="{% url 'gbe:troupe-add' %}{% if view.is_popup %}?_popup=1{% endif %}" class="{% if mode == 'troupe' %}gbe-tab-active{% else %}gbe-tab{% endif %}">Create Troupe</a></li>{% endif %}
  {% if mode == 'update' %}<li role="presentation"><a href="{% if view.is_popup %}?_popup=1{% endif %}" class="gbe-tab-active">Update</a></li>{% endif %}
 </ul>
{% endif %}
<div class="gbe-tab-area">
  <h3 class="gbe-title">{{view_title}}</h3>
  {% if intro_text != "&nbsp;" %}<p>{{intro_text | safe}}</p>{% endif %}
  <form action="" method="post" enctype="multipart/form-data" name="perf_form" id="perf_form">
   <p><font class="gbe-form-error">*</font> indicates a required field</p>
    {% include "form_table.tmpl" %}
    {% if form.formset %}
    {{ form.formset.management_form }}
    <div class="dragable_list container" id="mySortable">
      {% for subform in form.formset %}
      <div class="form-row row" draggable="true">
        <div class="btn btn-xs p-0"><i class="fas fa-bars"></i></div>
        {% for hidden in subform.hidden_fields %}{{ hidden }}{% endfor %}
        {% include "gbe/scheduling/event_booking_field.tmpl" with field=subform.social_network header_size="" field_size="col-lg-2 col-md-3 col-sm-3 col-7" %}
        {% include "gbe/scheduling/event_booking_field.tmpl" with field=subform.link header_size="" field_size="col-lg-7 col-md-3 col-sm-3 col-7" %}
        {% include "gbe/scheduling/event_booking_field.tmpl" with field=subform.username header_size="" field_size="col-lg-7 col-md-3 col-sm-3 col-7" %}
        <div class="col-lg-7 col-md-3 col-sm-3 col-7" id="{{forloop.counter0}}-no_network_choice"><i>Choose an option from drop down to enter publicity details</i></div>
        {% include "gbe/scheduling/event_booking_field.tmpl" with field=subform.DELETE header_size="col-1" field_size="col-1" %}
        </div>
      {% endfor %}
    </div>
    {% endif %}
  {% if view.is_popup %}<input type="submit" name="cancel" value="Cancel" class="btn gbe-btn-light" onclick="window.open('','_self').close();">{% else %}<a href="{{return_url}}" class="btn gbe-btn-light">Cancel</a> {% if delete_url %}<a href="#" data-toggle="modal" data-target="#DeleteModal" data-backdrop="true" class="btn gbe-btn-secondary">Delete</a>{% endif %}{% endif %}
  <input type="submit" name="submit" value="Save" class="btn gbe-btn-primary">
  </form>
{% if delete_url %}
<!-- Delete Modal Start -->
              <div class="modal" id="DeleteModal" role="dialog">
              <div class="modal-dialog modal-dialog-centered modal-sm">
              <div class="modal-content gbe-modal-content">
                <form action="{{delete_url}}" method="post">
                <div class="modal-header gbe-modal-header">
                    <h4 class="modal-title">Confirm Delete</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    {% csrf_token %}
                    <p>Are you sure you want to delete {{object}}?  This cannot be undone.</p>
                    
                </div>
                <div class="modal-footer gbe-modal-footer">
                  <button type="button" class="btn gbe-btn-light" data-dismiss="modal">Close</button>
                  <input type="submit" value="Confirm" class="btn gbe-btn-primary">
                </div></form>
              </div></div></div>
<!-- Delete Modal End -->
{% endif %}
</div>
&nbsp;<br>
{% addtoblock "js" %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js"></script>
 {{ form.media.js }}
<script>
(function($) {
    $('#add-form').click(function() {
        var index = $('#id_inline_test_models-TOTAL_FORMS').val()
        var newTable = $('#id_inline_test_models-__prefix__-DELETE').parents('table').clone()
        newTable.find(':input').each(function() {
            for (attr of ['name', 'id'])
                $(this).attr(
                    attr,
                    $(this).attr(attr).replace('__prefix__', index)
                )
        })
        newTable.insertBefore($(this))
        $('#id_inline_test_models-TOTAL_FORMS').val(
            parseInt($('#id_inline_test_models-TOTAL_FORMS').val()) + 1
        )
        newTable.slideDown()
    })
})($)
</script>
<script type="text/javascript">
const link_values = new Set(["Website", "Facebook"]);
const username_values = new Set(["Cash App", "Instagram", "Paypal", "TikTok", "Venmo", "YouTube"]);
function socialLinkSetup(start_row) {
    const network_id = '#id_links-' + start_row + '-social_network'
    const link_id = '#id_links-' + start_row + '-link'
    const username_id = '#id_links-' + start_row + '-username'
    const no_net_div = '#' + start_row + '-no_network_choice'
    if (link_values.has($(network_id).val())) { 
        $(link_id).parent().show()
        $(username_id).parent().hide()
        $(no_net_div).hide()
    } else {
        if (username_values.has($(network_id).val())) { 
            $(link_id).parent().hide()
            $(username_id).parent().show()
            $(no_net_div).hide()
        } else {
            $(link_id).parent().hide()
            $(username_id).parent().hide()
            $(no_net_div).show()
        }
    }
}
$(document).ready(function(){
  var list = $('#mySortable'),
      updatePosition = function() {
        list.children().each(function(i, e){
          $(this).children('input[class="drag_change"]').val(++i);
        });
      };

  list.sortable({
    placeholder: "ui-state-highlight",
    update: updatePosition
  });
});
$(document).ready(function () {
    $('#perf_form select[name$="social_network"]').change(function () {
        start_row = Number($(this).attr("name").replace(/\D+/g, ""));
        socialLinkSetup(start_row)
    });
});
$(window).on('load', function () {
    for (var i = 0; i < 5; i++) {
        socialLinkSetup(i)
    };
});
</script>
{% endaddtoblock %}
{% endblock content %}
