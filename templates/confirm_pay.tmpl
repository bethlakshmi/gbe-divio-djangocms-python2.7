{% extends 'base.tmpl' %}
{% load staticfiles %}

{% block title %}
   {{page_title}}
{% endblock %}

{% block content %}
{{ dynamic_message | safe }}
<table class="table">
	<thead><tr><th>Item</th><th>Price</th></tr></thead>
	<tbody>{% for item in cart_items %}
 	    <tr><td>{{item.0}}</td><td>${{item.1}}</td></tr>{% endfor %}
 	</tbody>
	<tfoot><tr><th>Total:</th><th>${{total}} (USD)</th></tr></tfoot>
</table>
{% endblock %}
